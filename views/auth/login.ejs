<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/forms.css">
    <link rel="stylesheet" href="/css/product.css">
    </head>

    <body>
        <%- include('../includes/navigation.ejs') %>
        <main>
            <form class="product-form" action="/login" method="POST">
                <% if(message !== undefined && message.length > 0) { %>
                    <div class="message message--error"><%= message.join(', ') %></div>
                <% } %>
                <div class="form-control">
                    <label for="username">User name</label>
                    <input 
                        type="text" 
                        name="username" 
                        id="username"
                        value="<%= old && old.username ? old.username : '' %>"
                    >
                    <div class="validate-error"><%= validationResultErrors !== undefined 
                        ? validationResultErrors.errors.filter(e => e.param === 'username').map(e => e.msg).join(', ')
                        : '' %></div>
                </div>
                <div class="form-control">
                    <label for="password">Password</label>
                    <input 
                        type="password" 
                        name="password" 
                        id="password"
                        value="<%= old && old.password ? old.password : '' %>"
                    >
                    <div class="validate-error"><%= validationResultErrors !== undefined 
                        ? validationResultErrors.errors.filter(e => e.param === 'password').map(e => e.msg).join(', ')
                        : '' %></div>
                </div>
                <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
                <button class="btn" type="submit">Login</button>
                <div class="centered">
                    <a href="/reset" >Forgot password</a>
                </div>
            </form>
        </main>
        <%- include('../includes/end.ejs') %>